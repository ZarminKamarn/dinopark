<%- include("../partials/head", {title: "Attractions"}) %>
<%- include("../partials/header") %>

<main class="browse-section">
    <% if (park) { %>
        <h2>Nos attractions du parc <%= park.getName() %></h2>
    <% } else { %>
        <h2>Nos attractions</h2>
    <% } %>
    
    <ul class="browse-list">
        <% attractions.forEach((attraction) => { %>
            <li class="browse-card">
                <%- include("../partials/browseCard", { data: attraction, image: attraction.getImage(), link: "/attraction" }) %>
            </li>
        <% }) %>
    </ul>
</main>

<%- include("../partials/footer") %>