<%- include("../partials/head", {title: "Accueil"}) %>
<%- include("../partials/header") %>

<main>
    <section class="hero-banner">
        <h2>Vivez l'aventure préhistorique !</h2>
        <div>
            <a href="/booking" class="btn">Réserver maintenant</a>
        </div>
    </section>
    <section class="parks">
        <h2>Nos Parcs</h2>
        <ul>
            <% parks.forEach((park) => { %>
                <li>
                    <a href="/park/<%= park.getId() %>"><%= park.getName() %></a>
                </li>
            <% }) %>
        </ul>
    </section>
    <section class="explore">
        <h2>Explorer</h2>
        <ul>
            <li>
                <img src="" alt="Attraction">
                <a href="/attraction">Nos attractions</a>
            </li>
            <li>
                <img src="" alt="Dinosaure">
                <a href="/category">Nos dinosaures</a>
            </li>
        </ul>
    </section>
    <section class="hours">
        <h2>Nos horaires</h2>
        <ul>
            <% parks.forEach((park) => { %>
                <li><%= park.getOpeningTime() %> - <%= park.getClosingTime() %></li>
            <% }) %>
        </ul>
    </section>
</main>

<%- include("../partials/footer") %>