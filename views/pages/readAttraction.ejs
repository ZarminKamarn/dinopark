<%- include("../partials/head", {title: "truc"}) %>
<%- include("../partials/header") %>

<main>
    <section>
        <a href="/attraction" class="btn end-line-btn">Retour</a>
        <div>
            <h2><%= attraction.getName() %></h2>
            <div>
                <p>Taille minimale : <%= attraction.getMinHeight() %> cm</p>
                <% if(attraction.getChildrenAreAllowed()){ %>
                    <p>Pour toute la famille</p>
                <% } else { %>
                    <p>Les enfants ne sont pas autoris√©s</p>
                <% } %>
                <p><%= attraction.getType() %></p>
            </div>
            <div>
                <img src="<%= attraction.getImage() %>" alt="photo de l'attraction">
            </div>
        </div>
    </section>
    <section>
        <h2>Les dinosaures de notre attraction</h2>
        <ul>
            <% dinosaurs.forEach((dino) => { %>
            <li>
                <%- include("../partials/browseCard", { data: dino, image: dino.getImage(), link: "/dinosaur" }) %>
            </li>
            <% }) %>
        </ul>
    </section>
</main>

<%- include("../partials/footer") %>